
@model Aptitude.Models.Question


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Question</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @*@{
            Aptitude.Models.Question Question = ViewBag.Question as Aptitude.Models.Question;
                }*@
        @for (int i = 0; i < Model.NumberOfOptions; i++)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Choice[i].Option, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Choice[i].Option, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Choice[i].Option, "", new { @class = "text-danger" })

                    @Html.CheckBoxFor(model => model.Choice[i].CorrectOption)
                </div>
            </div>
        }



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
