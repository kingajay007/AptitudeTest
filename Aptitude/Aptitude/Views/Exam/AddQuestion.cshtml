@model List<Aptitude.Models.Question>
@{
    ViewBag.Title = "AddQuestion";
}

<h2>AddQuestion</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Exam</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ElementAt(1).IsIncluded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ElementAt(1).Query)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ElementAt(1).Tags)
                </th>

                <th></th>
            </tr>

            @for (int i = 0; i < Model.Count;i++ )
            {
                <tr>
                    <td>
                        @Html.HiddenFor(model => model[i].Id, htmlAttributes: new { @value=Model[i].Id})
                        @Html.CheckBoxFor(model => model[i].IsIncluded, htmlAttributes: new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.DisplayFor(model => model[i].Query)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model[i].Tags)
                    </td>


                </tr>
            }

        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}